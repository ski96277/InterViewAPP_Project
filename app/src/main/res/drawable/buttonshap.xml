<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners
                android:radius="100dp"

                />
            <gradient
                android:angle="180"
                android:centerX="35%"
                android:centerColor="#edd6de"
                android:startColor="#edd6de"
                android:endColor="#edd6de"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="62dp"
                />
            <stroke
                android:width="3dp"
                android:color="#fcf9f9"
                />
        </shape>
    </item>


